link(href="input-gender.sass" rel="stylesheet")//- Option.id - id    Option.value - value    Option.gender - текст в span (пол)mixin input-gender(option)    .input-gender        input(            class="input-gender__radio-button"            type="radio"            name="gender"            id= Option.id            value= Option.value        )        label.input-gender__signature(for=option.id)            span= Option.gender